<%-include("../partials/admin/header.ejs")%>
    <style>
        body {
            background-color: #f4f6f9;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .container {
            background-color: white;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            padding: 30px;
            margin-top: 50px;
        }
        .table-hover tbody tr:hover {
            background-color: rgba(0,123,255,0.1);
            transition: background-color 0.3s ease;
        }
        .btn-create {
            background-color: #28a745;
            border: none;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: transform 0.2s;
        }
        .btn-create:hover {
            background-color: #218838;
            transform: scale(1.05);
        }
        .delete-btn {
            display: flex;
            align-items: center;
            gap: 5px;
        }
        .table-dark {
            background-color: #343a40;
        }
        .page-title {
            color: #343a40;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 15px;
        }
        .page-title i {
            color: #007bff;
        }
    </style>
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="page-title">
                <i class="fas fa-tags"></i>
                Coupon Management Dashboard
            </h1>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-hover shadow-sm">
                <thead class="table-dark">
                    <tr>
                      <th>#</th>
                      <th>Coupon Name</th>
                      <th>Offer Price</th>
                      <th>Minimum Purchase</th>
                      <th>Expiration Date</th>
                      <th>Status</th> <!-- New column -->
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% coupons.forEach((coupon, index) => { %>
                    <tr class="<%= coupon.isExpired ? 'text-muted' : '' %>">
                      <td><%= index + 1 %></td>
                      <td><%= coupon.name %></td>
                      <td>₹<%= coupon.offerPrice %></td>
                      <td>₹<%= coupon.minimumPrice %></td>
                      <td><%= new Date(coupon.expireOn).toLocaleDateString() %></td>
                      <td>
                        <%- coupon.isExpired ? '<span class="badge bg-danger">Expired</span>' : '<span class="badge bg-success">Active</span>' %></td>
                      <td>
                            <button class="btn btn-danger btn-sm delete-btn" data-id="<%= coupon._id %>">Delete</button>
                      </td>
                    </tr>
                    <% }) %>
                  </tbody>
            </table>
        </div>
    </div>

    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.querySelectorAll('.delete-btn').forEach(button => {
            button.addEventListener('click', async (event) => {
                const couponId = event.target.closest('.delete-btn').dataset.id;

                const confirmation = await Swal.fire({
                    title: 'Delete Coupon?',
                    text: "This action cannot be reversed!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: '<i class="fas fa-check-circle"></i> Yes, delete it!',
                    cancelButtonText: '<i class="fas fa-times-circle"></i> Cancel'
                });

                if (confirmation.isConfirmed) {
                    try {
                        const response = await fetch(`/admin/coupons/${couponId}`, {
                            method: 'DELETE',
                        });

                        const result = await response.json();

                        if (response.ok) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Coupon Deleted',
                                text: result.message,
                                confirmButtonText: '<i class="fas fa-thumbs-up"></i> OK'
                            }).then(() => {
                                location.reload();
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Deletion Failed',
                                text: result.message || 'Could not delete coupon.',
                                confirmButtonText: '<i class="fas fa-redo"></i> Try Again'
                            });
                        }
                    } catch (error) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Unexpected Error',
                            text: 'An error occurred while processing your request.',
                            confirmButtonText: '<i class="fas fa-redo"></i> Try Again'
                        });
                        console.error(error);
                    }
                }
            });
        });
    </script>