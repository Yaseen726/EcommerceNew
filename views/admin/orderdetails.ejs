<%-include("../partials/admin/header.ejs")%>

    <div class="container my-5">
        <h1 class="text-center">Order Details</h1>
        <hr>

        <!-- User Information -->
        <div class="card mb-4">
            <div class="card-body">
                <h4>User Information</h4>
                <p><strong>Name:</strong> <%= user.name %></p>
                <p><strong>Email:</strong> <%= user.email %></p>
                <p><strong>Phone:</strong> <%= user.phone %></p>
            </div>
        </div>

        <!-- Order Summary -->
        <div class="card mb-4">
            <div class="card-body">
                <h4>Order Summary</h4>
                <p><strong>Order ID:</strong><%=order.orderId%></p>
                <p><strong>Invoice Date:</strong> <%= new Date(order.invoiceDate).toLocaleString() %></p>
                <p><strong>Status:</strong> 
                    <span class="badge bg-<%= order.status === 'cancelled' ? 'danger' : 'success' %>">
                        <%= order.status %>
                    </span>
                </p>
                <p><strong>Total Price:</strong> ₹<%= order.totalPrice %></p>
                <p><strong>Discount:</strong> ₹<%= order.discount %></p>
                <p><strong>Final Amount:</strong> ₹<%= order.finalAmount %></p>
            </div>
        </div>
        <!--Payment Modes-->
        <div class="card mb-4">
            <div class="card-body">
                <h4>Payment Mode</h4>
                <%if(order.razorpayOrderId){%>
                    <p>Mode:Online Payment</p>
                    <p><strong>Order ID:</strong><%=order.orderId%></p>
                    <p><strong>Razorpay Order ID:</strong><%=order.razorpayOrderId%></p>
                <%}else{%>
                    <p>Mode:Cash On Delivery</p>
                    <p><strong>Order ID:</strong><%=order.orderId%></p>
                <%}%>
                <p><strong>Status:</strong> 
                    <span class="badge bg-<%= order.status === 'cancelled' ? 'danger' : 'success' %>">
                        <%= order.status %>
                    </span>
                </p>
            </div>
        </div>

        <!-- Ordered Items -->
        <div class="card mb-4">
            <div class="card-body">
                <h4>Ordered Items</h4>
                <% if (orderedItems.length > 0) { %>
                    <ul class="list-group">
                        <% orderedItems.forEach(item => { %>
                            <li class="list-group-item d-flex align-items-center">
                                <img src="/uploads/<%= item.productImage[0] %>" 
                                     alt="<%= item.productName %>" 
                                     class="me-3" style="width: 50px; height: 50px; object-fit: cover;">
                                <div>
                                    <p class="mb-0"><strong><%= item.productName %></strong></p>
                                    <p class="mb-0">Price: ₹<%= item.price %></p>
                                    <%if(item.quantity){%>
                                        <p class="mb-0">quantity: <%=item.quantity%></p>
                                    <%}else{%>
                                        <p class="mb-0">quantity:1</p>
                                    <%}%>
                                     <!-- Update as per quantity logic -->
                                </div>
                            </li>
                        <% }); %>
                    </ul>
                <% } else { %>
                    <p>No items found in this order.</p>
                <% } %>
            </div>
        </div>

        <!-- Delivery Address -->
        <div class="card mb-4">
            <div class="card-body">
                <h4>Delivery Address</h4>
                <% if (address) { %>
                    <p><strong>Type:</strong> <%= address.addresstype %></p>
                    <p><strong>Name:</strong> <%= address.name %></p>
                    <p><strong>City:</strong> <%= address.city %></p>
                    <p><strong>Landmark:</strong> <%= address.landmark %></p>
                    <p><strong>State:</strong> <%= address.state %></p>
                    <p><strong>Pincode:</strong> <%= address.pincode %></p>
                    <p><strong>Phone:</strong> <%= address.phone %></p>
                <% } else { %>
                    <p>Address details not available.</p>
                <% } %>
            </div>
        </div>

        <!-- Actions -->
        <div class="text-center">
            <a href="/admin/orders" class="btn btn-secondary">Back to Orders</a>
        </div>
    </div>
