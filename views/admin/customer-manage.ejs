<%- include("../partials/admin/header.ejs") %>
<style>
    /* General Body Styling */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f9fa;
    }

    /* Header Styling */
    .content-header {
        background-color: #343a40;
        color: #fff;
        padding: 15px 20px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .content-title {
        font-size: 1.8rem;
        font-weight: bold;
    }

    /* Search Bar Styling */
    .input-group {
        background-color: #f4f5f9;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .input-group input {
        border: none;
        box-shadow: none;
        padding: 10px;
        font-size: 16px;
    }


    /* Table Styling */
    .table {
        background-color: #fff;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        overflow: hidden;
    }

    .table th {
        background-color: #343a40;
        color: #fff;
        text-align: center;
        font-size: 1rem;
        padding: 15px;
    }

    .table td {
        text-align: center;
        font-size: 0.95rem;
        padding: 10px;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f2f2f2;
    }

    .table-striped tbody tr:hover {
        background-color: #e9ecef;
    }

    /* Button Styling */

    .btn-danger {
        background-color: #dc3545;
    }

    .btn-danger:hover {
        background-color: #bd2130;
    }

    .btn-success {
        background-color: #28a745;
    }

    .btn-success:hover {
        background-color: #218838;
    }

    /* Pagination Styling */
    .pagination {
        margin-top: 20px;
    }

    .pagination .page-link {
        color: #007bff;
        border-radius: 50%;
        border: none;
        font-size: 0.9rem;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .pagination .active .page-link {
        background-color: #007bff;
        color: white;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .pagination .page-link:hover {
        background-color: #0056b3;
        color: white;
    }
</style>

<header class="card-header text-center mb-20">
    <form action="/admin/users/" method="get" class="d-inline">
        <div class="input-group input-group-sm border border-1 border-grey rounded-pill" 
             style="width: 500px; margin-left: 230px;">
            <input type="text" class="form-control border-0 rounded-pill" 
                   placeholder="Search customers..." name="search" value="<%= search || '' %>">
            <button class="btn border-0 newly" type="submit">Search</button>
        </div>
    </form>
</header>

<div class="right mt-5">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col"><b>Name</b></th>
                <th scope="col"><b>Email</b></th>
                <th scope="col"><b>Phone No</b></th>
                <th scope="col"><b>Action</b></th>
            </tr>
        </thead>
        <tbody>
            <% if (data.length === 0) { %>
                <tr>
                    <td colspan="4" class="text-center">No customers found.</td>
                </tr>
            <% } else { %>
                <% for (let i = 0; i < data.length; i++) { %>
                    <tr>
                        <td><%= data[i].name %></td>
                        <td><%= data[i].email %></td>
                        <td><%= data[i].phone %></td>
                        <td>
                            <% if (data[i].isBlocked) { %>
                                <a href="/admin/blockunblockcust?id=<%= data[i]._id %>" 
                                   class="btn btn-danger text-white" style="width: 80px;">Unblock</a>
                            <% } else { %>
                                <a href="/admin/blockunblockcust?id=<%= data[i]._id %>" 
                                   class="btn btn-success text-white" style="width: 80px;">Block</a>
                            <% } %>
                        </td>
                    </tr>
                <% } %>
            <% } %>
        </tbody>
    </table>
</div>

<!-- Pagination -->
<div class="container mt-3">
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <% for (let i = 1; i <= totalPages; i++) { %>
                <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                    <a class="page-link" href="/admin/users?page=<%= i %>&search=<%= search || '' %>">
                        <%= i %>
                    </a>
                </li>
            <% } %>
        </ul>
    </nav>
</div>


