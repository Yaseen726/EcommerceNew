<%- include('../partials/user/header') %>
    <style>
        header {
            position: relative;
            z-index: 1000;
        }

        .detail-gallery .product-image-slider {
            position: relative;
            z-index: 10;
            overflow: hidden;
        }

        .modal-body {
            padding-top: 100px;
        }

        .detail-extralink {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 15px;
        }

        .detail-qty {
            display: flex;
            align-items: center;
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 5px;
            height: 40px;
            width: 100px;
            /* Ensure consistency in width */
        }

        .qty-val {
            flex: 1;
            text-align: center;
            font-size: 16px;
            background-color: #fff;
            color: #333;
            border: none;
            margin: 0;
        }

        .qty-controls {
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .qty-down,
        .qty-up {
            background-color: #f8f9fa;
            border: none;
            color: #333;
            font-size: 12px;
            width: 30px;
            height: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: background-color 0.2s ease;
        }

        .qty-down:hover,
        .qty-up:hover {
            background-color: #e9ecef;
        }

        .qty-down {
            border-radius: 0 0 8px 0;
        }

        .qty-up {
            border-radius: 8px 0 0 0;
        }

        .product-extra-link2 {
            display: inline-block;
        }

        .btn-success {
            padding: 10px 20px;
            font-size: 16px;
            font-weight: bold;
        }

        .action-btn {
            background: none;
            border: none;
            cursor: pointer;
            color: #555;
            font-size: 20px;
            transition: color 0.2s ease;
        }

        .action-btn:hover {
            color: #e74c3c;
        }

        .product-actions {
            display: flex;
            flex-direction: column;
            gap: 15px;
            align-items: center;
            margin-top: 20px;
        }

        .cart-actions {
            display: flex;
            align-items: center;
            gap: 15px;
            width: 100%;
            justify-content: center;
        }

        .btn-buy-now {
            background-color: #28a745;
            color: white;
            padding: 10px 20px;
            font-size: 16px;
            font-weight: bold;
            border: none;
            border-radius: 4px;
            width: 100%;
            max-width: 300px;
            transition: background-color 0.2s ease;
        }

        .btn-buy-now:hover {
            background-color: #218838;
            color: white;
            text-decoration: none;
        }

        .coupon-section {
        margin-top: 15px;
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 14px;
    }

    .coupon-section input {
        flex: 1;
        padding: 6px 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
    }

    .coupon-section button {
        padding: 6px 15px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 14px;
        transition: background-color 0.2s;
    }

    .coupon-section button:hover {
        background-color: #0056b3;
    }
    </style>


    <div class="container">
        <nav aria-label="breadcrumb" class="mt-3">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/category/<%= product.category %>">
                        <%= cat.name %>
                    </a></li>
                <li class="breadcrumb-item active" aria-current="page">
                    <%= product.productName %>
                </li>
