<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #f8f9fa 0%, #eef0ef 100%);
    }

    .success-container {
        text-align: center;
        padding: 3rem 2rem;
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        max-width: 500px;
        width: 90%;
        animation: slideUp 0.6s ease-out;
    }

    @keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .checkmark-circle {
        width: 120px;
        height: 120px;
        position: relative;
        margin: 0 auto 30px;
        background: linear-gradient(45deg, #28a745, #20c997);
        border-radius: 50%;
        box-shadow: 0 8px 20px rgba(40, 167, 69, 0.25);
        display: flex;
        align-items: center;
        justify-content: center;
        animation: scaleIn 0.5s ease-out 0.3s both;
    }

    @keyframes scaleIn {
        from {
            transform: scale(0);
        }
        to {
            transform: scale(1);
        }
    }

    .checkmark-circle::after {
        content: '';
        width: 50px;
        height: 80px;
        border: 8px solid white;
        border-left: 0;
        border-top: 0;
        transform: rotate(45deg) translate(-5px, -10px);
        animation: check 0.5s ease-out 0.8s both;
    }

    @keyframes check {
        from {
            opacity: 0;
            transform: rotate(45deg) translate(-5px, -10px) scale(0.8);
        }
        to {
            opacity: 1;
            transform: rotate(45deg) translate(-5px, -10px) scale(1);
        }
    }

    .success-title {
        color: #2d3436;
        font-size: 2.5rem;
        margin-bottom: 1rem;
        font-weight: 600;
    }

    .success-message {
        color: #636e72;
        font-size: 1.1rem;
        line-height: 1.6;
        margin-bottom: 2rem;
    }

    .continue-btn {
        display: inline-block;
        padding: 1rem 2.5rem;
        background: linear-gradient(45deg, #28a745, #20c997);
        color: white;
        text-decoration: none;
        border-radius: 50px;
        font-weight: 500;
        box-shadow: 0 4px 15px rgba(40, 167, 69, 0.2);
        transition: all 0.3s ease;
    }

    .continue-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(40, 167, 69, 0.3);
    }

    @media (max-width: 480px) {
        .success-container {
            padding: 2rem 1.5rem;
        }

        .checkmark-circle {
            width: 100px;
            height: 100px;
        }

        .checkmark-circle::after {
            width: 40px;
            height: 70px;
            border-width: 6px;
        }

        .success-title {
            font-size: 2rem;
        }

        .success-message {
            font-size: 1rem;
        }
    }
</style>

    <div class="success-container">
        <div class="checkmark-circle"></div>
        <h1 class="success-title">Order Complete!</h1>
        <p class="success-message">
            Your order has been successfully placed.<br>
            We'll send you a confirmation email shortly.
        </p>
        <a href="/" class="continue-btn">Continue Shopping</a>
    </div>